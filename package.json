{
  "name": "nest-raven",
  "version": "4.0.0",
  "description": "Sentry Raven Module for Nest Framework",
  "directories": {
    "lib": "lib"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json && cp *.md dist && cp LICENSE dist && cp package.json dist",
    "coverage": "cat ./coverage/lcov.info | coveralls",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mentos1386/nest-raven.git"
  },
  "keywords": [
    "nestjs",
    "nest",
    "raven",
    "sentry",
    "module"
  ],
  "author": "Tine Jozelj",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mentos1386/nest-raven/issues"
  },
  "homepage": "https://github.com/mentos1386/nest-raven#readme",
  "dependencies": {
    "@sentry/minimal": "^4.6.4"
  },
  "devDependencies": {
    "@nestjs/common": "^6.0.2",
    "@nestjs/core": "^6.0.2",
    "@nestjs/platform-express": "^6.0.2",
    "@nestjs/testing": "^6.0.2",
    "@sentry/hub": "4.6.4",
    "@types/jest": "^24.0.11",
    "@types/node": "^11.11.4",
    "coveralls": "^3.0.3",
    "jest": "^24.5.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.4.0",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.0",
    "ts-node": "^8.0.3",
    "typescript": "^3.3.0"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "collectCoverage": true,
    "globals": {
      "ts-jest": {
        "diagnostics": false
      }
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
